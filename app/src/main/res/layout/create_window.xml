<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/normal_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Новый тайтл"
            android:textColor="#AA5048"
            android:textColorLink="#401B17"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/dotted_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:background="@drawable/dotted_line"

            />

        <ImageView
            android:id="@+id/imageTitle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/add_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категория:"
            android:textColor="#AA5048"
            android:textSize="15dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageTitle"
            android:fontFamily="@font/montserrat_alternates_semibold"

            />
        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AA5048"
            android:ems="10"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:hint="Введите категорию"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#AA5048"
            android:textColorHint="#7BAA5048"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название:"
            android:textColor="#AA5048"
            android:textSize="15dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/category"
            android:fontFamily="@font/montserrat_alternates_semibold"
            />
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AA5048"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:hint="Введите название:"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#AA5048"
            android:textColorHint="#7BAA5048"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Прогресс:"
            android:textColor="#AA5048"
            android:textSize="15dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:fontFamily="@font/montserrat_alternates_semibold"
            />
        <EditText
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AA5048"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:hint="Введите ваш прогресс:"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#AA5048"
            android:textColorHint="#7BAA5048"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Общее количество:"
            android:textColor="#AA5048"
            android:textSize="15dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/progress"
            android:fontFamily="@font/montserrat_alternates_semibold"
            />
        <EditText
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AA5048"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:hint="Введите общее количество\nсерий/глав или прочерк:"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#AA5048"
            android:textColorHint="#7BAA5048"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:textColor="#AA5048"
            android:textSize="15dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/count"
            android:fontFamily="@font/montserrat_alternates_semibold"
            />
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AA5048"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:hint="Добавьте дополнительное описание:"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#AA5048"
            android:textColorHint="#7BAA5048"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/count" />

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/normal_bg"
                android:text="Сохранить"
                android:textAllCaps="false"
                android:textColor="#658963" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_bg"
                android:text="Отмена"
                android:textAllCaps="false"
                android:textColor="#AA5048" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>